<?xml version="1.0" encoding="utf-8"?>
    <!-- PARENT -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@color/reply_background"
                android:stretchColumns="0">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profilePicture"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"/>
    <RelativeLayout
        android:id="@+id/postInfo"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_gravity="bottom"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp">
        <TextView
            android:id="@+id/username"
            android:textColor="@color/main_font"
            android:textSize="@dimen/big_font"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="2sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/handle"
            android:textColor="@color/main_font"
            android:textSize="@dimen/medium_font"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="2sp"
            android:layout_toRightOf="@id/username"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/timeNumber"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/big_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/timeLetter"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/timeLetter"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/small_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/postBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postInfo"
        android:layout_toRightOf="@+id/profilePicture">
        <TextView
            android:id="@+id/postMessage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/main_font"
            android:minLines="2"
            android:textSize="@dimen/big_font"
            android:layout_marginTop="0dp"/>
        <ImageView
            android:id="@+id/expanded"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_alignParentRight="true"/>
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/messageImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/postMessage"
            android:layout_marginTop="0dp"/>
    </RelativeLayout>
        <RelativeLayout android:paddingTop="8dip"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/postBody"
                        android:layout_toRightOf="@id/profilePicture">
        <ImageView android:id="@+id/voteIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/voteCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/voteIcon"
            android:textColor="@color/main_font"
            android:textStyle="bold"
            android:textSize="@dimen/big_font"
            android:layout_marginRight="@dimen/post_action_margin"/>
        <ImageView android:id="@+id/repostIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:layout_toRightOf="@id/voteCount"
                   android:layout_marginRight="@dimen/post_action_margin"
                   android:layout_marginLeft="@dimen/post_action_margin"/>
        <ImageView android:id="@+id/replyIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:onClick="startCreatePostActivity"
                   android:layout_toRightOf="@id/repostIcon"
                   android:layout_marginRight="@dimen/post_action_margin"
                   android:layout_marginLeft="@dimen/post_action_margin"/>
        <ImageView android:id="@+id/moreIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>

