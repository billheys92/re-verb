<?xml version="1.0" encoding="utf-8"?>
<!-- PARENT -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" android:paddingTop="0dip">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profilePicture"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_margin="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"/>
    <RelativeLayout
        android:id="@+id/postInfo"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:layout_gravity="bottom"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp">
        <TextView
            android:id="@+id/username"
            android:textColor="@color/main_font"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="2sp"
            android:paddingLeft="2sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/handle"
            android:textColor="@color/main_font"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="2sp"
            android:layout_toRightOf="@id/username"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/timeNumber"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/timeLetter"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/timeLetter"
            android:textColor="@color/dark_grey"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/postBody"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/main_font"
        android:textSize="12sp"
        android:layout_below="@+id/postInfo"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_marginTop="0dp"/>
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/messageImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/postBody"
        android:layout_toRightOf="@+id/profilePicture"
        android:layout_marginTop="0dp"/>
    <RelativeLayout android:paddingTop="8dip"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/messageImage"
                    android:layout_toRightOf="@id/profilePicture"
                    android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/replyIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:onClick="startCreatePostActivity"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/voteIcon"
                   android:layout_width="22dip"
                   android:layout_height="22dip"
                   android:layout_toRightOf="@id/replyIcon"/>
        <TextView
            android:id="@+id/voteCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/voteIcon"
            android:textColor="@color/main_font"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/viewRepliesIcon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="768dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>
</RelativeLayout>

