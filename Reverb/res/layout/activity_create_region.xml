<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Square"
            android:id="@+id/editRegionSquare"
            android:onClick="onSelectRectangle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Circle"
            android:id="@+id/editRegionCircle"
            android:onClick="onSelectCircle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Polygon"
            android:id="@+id/editRegionPolygon"
            android:onClick="onSelectPolygon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Save"
            android:id="@+id/editRegionSave"
            android:onClick="onSaveRegionClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearRegionButton"
            android:layout_below="@+id/map"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="onClearRegionClick" />

    </LinearLayout>

</RelativeLayout>